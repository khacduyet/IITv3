@using ProjectLibrary.Database
@using TeamplateHotel.Controllers
@using TeamplateHotel.Handler
@using ProjectLibrary.Config
@using TeamplateHotel.Models
@{
    var lang = Request.Cookies["LanguageID"].Value;
    Hotel detailHotel = CommentController.DetailHotel(Request.Cookies["LanguageID"].Value);
    List<ShowObject> articleShowHots = CommentController.HotArticles(Request.Cookies["LanguageID"].Value);
    List<Language> languages = CommentController.GetLanguages();
    Plugin plugin = CommentController.GetPluigPlugin();
    List<Menu> menus = CommentController.GetMainMenus(Request.Cookies["LanguageID"].Value);
    Menu menuArticle = ViewBag.menuArticle ?? new Menu();
    List<Menu> menufooter = CommentController.GetSecondMenus(Request.Cookies["LanguageID"].Value);
    var language = languages.FirstOrDefault(a => a.ID == Request.Cookies["LanguageID"].Value) ?? new Language();
    string homepage = "";
    if (ViewBag.HomePage == true)
    {
        homepage = "home";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <title>@ViewBag.MetaTitle</title>
    <meta name="keywords" content="@ViewBag.MetaKeyword">
    <meta name="description" content="@ViewBag.MetaDesctiption">
    <link rel="icon" href="~/favicon.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600&display=swap" rel="stylesheet">
    <!-- CSS only -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/font/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/font/ionicons/ionicons-2.0.1/css/ionicons.min.css">
    <link href="~/Content/assets/font/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="~/Content/assets/lightbox/dist/css/lightbox.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/bootstrap/js/bootstrap.min.js">
    <link rel="stylesheet" href="~/Content/asset/vendors/fancybox/jquery.fancybox.min.css">
    <!-- JavaScript Bundle with Popper -->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/owlcarousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/owlcarousel/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/assets/jquery-ui/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/css/theme.css">
    <style>
        @Html.Raw(plugin.CSS)
    </style>
    @Html.Raw(plugin.JS)
</head>
<body>
    <!-- HEADER -->
    @Html.Partial("PartialView/Header")
    <!-- BODY -->
    @RenderBody()
    <!-- FOOTER -->
    @Html.Partial("PartialView/Footer")

    <!-- SCRIPTS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="~/Content/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Content/assets/js/jquery.countTo.js"></script>
    <script src="~/Content/assets/js/jquery.validate.min.js"></script>
    <script src="~/Content/asset/vendors/fancybox/jquery.fancybox.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/anijs-master/anijs-master/dist/anijs-min.js"></script>
    <script type="text/javascript" src="~/Content/assets/owlcarousel/owl.carousel.js"></script>
    <script src="~/Content/assets/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Content/assets/jquery-ui/jquery-ui-i18n.min.js"></script>
    <script src="~/Content/assets/lightbox/dist/js/lightbox.min.js"></script>
    <script src="~/Content/assets/js/theme.js"></script>
    <script src="~/Content/assets/js/script.js"></script>
    @RenderSection("scripts", false)
</body>
</html>

